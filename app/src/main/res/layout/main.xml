<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/Preference"
            android:id="@+id/prefButton"
            android:onClick="onPrefBtnClicked"
            android:background="#3F51B5"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Очистить базу данных"
            android:id="@+id/btnClean"
            android:onClick="onCleanBtnClicked"
            android:background="#FF9800"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Статистика приступов"
            android:id="@+id/btnLoad"
            android:onClick="onLoadBtnClicked"
            android:background="#3E2723"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Bluetooth"
            android:id="@+id/blutbutton"
            android:onClick="onBluetoothBtnClicked"
            android:background="#8BC34A"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Приступ!!!"
            android:id="@+id/epilepticBtn"
            android:onClick="onEpilepticBtnClicked"
            android:background="#F44336"
            android:layout_margin="5dp" />

    </LinearLayout>

</LinearLayout>
